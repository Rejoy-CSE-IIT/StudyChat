<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    tools:context="com.geometry.chatprogramfinal.c_homePage.ChatMain_activity">
    <ImageView
        android:id="@+id/user_photo"
        android:background="@drawable/button_rounded_corners_gradient"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/chat_icon"
        android:contentDescription="@null" />


    <TextView
        android:id="@+id/email_address_from_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_rounded_corners_gradient"
        android:hint="email address "
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/display_name_from_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_rounded_corners_gradient"
        android:hint="User id"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/group_chat_Button_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_rounded_corners_gradient"
        android:onClick="Group_Chat_action_from_xml"
        android:text="Group Chat"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/user_chat_Button_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_rounded_corners_gradient"
        android:onClick="User_Chat_action_from_xml"
        android:text="User Chat" />

    <Button
        android:id="@+id/logout_button_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_rounded_corners_gradient"
        android:text="LogOut" />

    <Button
        android:id="@+id/creategroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_rounded_corners_gradient"
        android:onClick="Group_Control"
        android:text="Group"
        />

    <ProgressBar
        android:id="@+id/progressBar_from_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />



</LinearLayout>